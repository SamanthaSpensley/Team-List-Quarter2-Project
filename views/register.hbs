<div class="container">
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4 well">
      <form action="/register" method="POST">
        <div class="form-group">
          <label for="user_name"> Username</label>
          <input type="text" name="user_name" class="form-control" id="user_name" placeholder="Username">
        </div>
        <div class="form-group">
          <label for="genre">Genre</label>
          <input type="text" name="genre" class="form-control" id="genre" placeholder="Genre (Optional)">
        </div>
        <div class="form-group">
          <label for="instrument">Musical Instruments</label>
          <input type="text" name="instrument" class="form-control" id="instrument" placeholder="Instrument (Optional)">
        </div>
        <div class="form-group">
          <label for="influence">Influences</label>
          <input type="text" name="influence" class="form-control" id="influence" placeholder="Influences (Optional)">
        </div>
        <div class="form-group">
          <label for="bio">Biography</label>
          <textarea rows="5" cols="40"type="text" name="bio" class="form-control" id="bio" placeholder="Biography (Optional)"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>
